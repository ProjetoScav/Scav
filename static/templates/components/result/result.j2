{% if n_de_dados > 0 %}
{% set disabled = "false" %}
{% else %}
{% set disabled = "true" %}
{% endif %}
{% import "components/result/components-result.j2" as components %}
<article class="results loaded-content" hx-ext="alpine-morph">
    <article class="search-results">
        <div class="search-results__summary">
            <h2 class="search-results__title">Resultados da pesquisa...</h2>
            <p class="search-results__text">{{ n_de_dados|numero_format }} empresas encontradas</p>
        </div>
        <div x-data="{ disabled: {{ disabled }} }">
            {{ components.button() }}
            {% include "components/result/popup.j2" %}
        </div>
    </article>
    <article class="cnpjs">
        {% if n_de_dados > 0 %}
        {% for card in cards %}{{ components.card(card) }}{% endfor %}
        {{ components.pagination(n_paginas, pagina) }}
    </article>
    {% else %}
    <section class="no-result">
        <div>
            <img src="{{ url_for('static', filename='imgs/walking.svg') }}" alt="homem-caminhando" width="221px"
                height="336px">
        </div>
        <div>
            <p>NÃ£o foram encontrados resultados para a sua pesquisa</p>
        </div>
    </section>
    {% endif %}
</article>